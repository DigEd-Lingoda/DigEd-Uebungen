    <title>Bulk Project Spinner</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            background-color: #f4f4f9;
            color: #333;
            margin: 0;
            padding: 20px;
        }

        .container {
            display: flex;
            gap: 40px;
            max-width: 1000px;
            margin-top: 20px;
            flex-wrap: wrap;
            justify-content: center;
        }

        .controls {
            width: 320px;
            display: flex;
            flex-direction: column;
        }

        .wheel-container {
            position: relative;
        }

        #canvas {
            border: 8px solid #2c3e50;
            border-radius: 50%;
            box-shadow: 0 10px 30px rgba(0,0,0,0.15);
            background: white;
        }

        .pointer {
            position: absolute;
            top: -20px;
            left: 50%;
            transform: translateX(-50%);
            width: 0;
            height: 0;
            border-left: 18px solid transparent;
            border-right: 18px solid transparent;
            border-top: 35px solid #e74c3c;
            z-index: 10;
            filter: drop-shadow(0 2px 2px rgba(0,0,0,0.2));
        }

        textarea {
            padding: 12px;
            margin: 5px 0;
            width: 100%;
            height: 120px;
            border-radius: 8px;
            border: 1px solid #ccc;
            resize: vertical;
            font-family: inherit;
        }

        button {
            cursor: pointer;
            padding: 12px;
            margin: 5px 0;
            border-radius: 8px;
            border: none;
            font-weight: bold;
            transition: transform 0.1s, background 0.2s;
        }

        button:active { transform: scale(0.98); }

        .add-btn { background-color: #3498db; color: white; }
        .add-btn:hover { background-color: #2980b9; }

        #spin-btn {
            background-color: #2ecc71;
            color: white;
            font-size: 1.3rem;
            margin-top: 15px;
            height: 60px;
        }

        #spin-btn:disabled { background-color: #bdc3c7; cursor: not-allowed; }

        .project-list {
            margin-top: 15px;
            max-height: 150px;
            overflow-y: auto;
            background: #fff;
            padding: 10px;
            border-radius: 8px;
            border: 1px inset #eee;
            font-size: 0.9rem;
        }

        #result {
            text-align: center;
            color: #e74c3c;
            min-height: 1.5em;
        }

        label { font-weight: bold; margin-bottom: 5px; font-size: 0.9rem; }
