<body>

    <h1>Project Roulette</h1>

    <div class="container">
        <div class="controls">
            <label for="project-input">Paste Projects (one per line):</label>
            <textarea id="project-input" placeholder="Project Alpha&#10;Project Beta&#10;Project Gamma"></textarea>
            <button class="add-btn" onclick="addProjects()">Add to Wheel</button>
            
            <div class="project-list" id="project-list-display">
                <strong>Current Pool:</strong>
                <div id="items"><em>Empty</em></div>
            </div>

            <button id="spin-btn" onclick="spin()">SPIN</button>
            <h2 id="result"></h2>
        </div>

        <div class="wheel-container">
            <div class="pointer"></div>
            <canvas id="canvas" width="450" height="450"></canvas>
        </div>
    </div>

    <script>
        const canvas = document.getElementById('canvas');
        const ctx = canvas.getContext('2d');
        const input = document.getElementById('project-input');
        const spinBtn = document.getElementById('spin-btn');
        const resultDisplay = document.getElementById('result');

        let projects = [];
        let currentRotation = 0;
        let isSpinning = false;

        const colors = ["#1abc9c", "#3498db", "#9b59b6", "#f1c40f", "#e67e22", "#e74c3c", "#34495e", "#16a085", "#27ae60", "#2980b9"];

        function drawWheel() {
            const numSegments = projects.length;
            const centerX = canvas.width / 2;
            const centerY = canvas.height / 2;
            const radius = canvas.width / 2;

            ctx.clearRect(0, 0, canvas.width, canvas.height);

            if (numSegments === 0) {
                ctx.fillStyle = "#999";
                ctx.textAlign = "center";
                ctx.font = "16px Arial";
                ctx.fillText("Add projects to populate the wheel", centerX, centerY);
                return;
            }

            const anglePerSegment = (2 * Math.PI) / numSegments;

            projects.forEach((project, i) => {
                const startAngle = i * anglePerSegment + currentRotation;
                const endAngle = startAngle + anglePerSegment;

                // Draw Slice
                ctx.beginPath();
                ctx.moveTo(centerX, centerY);
                ctx.arc(centerX, centerY, radius, startAngle, endAngle);
                ctx.fillStyle = colors[i % colors.length];
                ctx.fill();
                ctx.strokeStyle = "rgba(255,255,255,0.2)";
                ctx.stroke();

                // Draw Text
                ctx.save();
                ctx.translate(centerX, centerY);
                ctx.rotate(startAngle + anglePerSegment / 2);
                ctx.textAlign = "right";
                ctx.fillStyle = "white";
                ctx.font = "bold 14px Arial";
                // Truncate long text
                const displayName = project.length > 15 ? project.substring(0, 12) + "..." : project;
                ctx.fillText(displayName, radius - 30, 5);
                ctx.restore();
            });
        }

        function addProjects() {
            const val = input.value.trim();
            if (val) {
                // Split by newline and filter out empty strings
                const newItems = val.split('\n')
                                   .map(item => item.trim())
                                   .filter(item => item.length > 0);
                
                projects = [...projects, ...newItems];
                input.value = "";
                updateUI();
            }
        }

        function updateUI() {
            const list = document.getElementById('items');
            if (projects.length === 0) {
                list.innerHTML = "<em>Empty</em>";
                spinBtn.disabled = true;
            } else {
                list.innerHTML = projects.map(p => `<div>â€¢ ${p}</div>`).join('');
                spinBtn.disabled = false;
            }
            drawWheel();
        }

        function spin() {
            if (isSpinning || projects.length === 0) return;

            isSpinning = true;
            resultDisplay.innerText = "Good luck...";
            
            const spinDuration = 4000; 
            const startRotation = currentRotation;
            const extraSpins = (Math.random() * 8 + 7) * 2 * Math.PI; 
            
            const startTime = performance.now();

            function animate(currentTime) {
                const elapsed = currentTime - startTime;
                const progress = Math.min(elapsed / spinDuration, 1);
                
                // Ease out
                const easeOut = 1 - Math.pow(1 - progress, 4);
                
                currentRotation = startRotation + (extraSpins * easeOut);
                drawWheel();

                if (progress < 1) {
                    requestAnimationFrame(animate);
                } else {
                    finishSpin();
                }
            }
            requestAnimationFrame(animate);
        }

        function finishSpin() {
            isSpinning = false;
            const numSegments = projects.length;
            const anglePerSegment = (2 * Math.PI) / numSegments;
            const normalizedRotation = (currentRotation % (2 * Math.PI) + 2 * Math.PI) % (2 * Math.PI);
            const pointerAngle = (3 * Math.PI / 2); 
            
            let winningIndex = Math.floor((pointerAngle - normalizedRotation + 4 * Math.PI) % (2 * Math.PI) / anglePerSegment);
            
            const winner = projects[winningIndex];
            resultDisplay.innerText = "Winner: " + winner;

            setTimeout(() => {
                if(confirm(`The wheel selected: ${winner}\n\nRemove it from the pool?`)) {
                    projects.splice(winningIndex, 1);
                    updateUI();
                    resultDisplay.innerText = "Project removed!";
                }
            }, 400);
        }

        updateUI();
    </script>
</body>
</html>
